<section class="container">
  <h1>Logements pour pêcheurs</h1>
  <div id="map-peche" class="glass"></div>
  <div class="listing" id="listing"></div>
</section>

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
const JSON_URL = "data/hobivia-peche.json";
let logements = [];

const mapPeche = L.map('map-peche').setView([46.6, 2.2], 5.5);
L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {attribution:'© OpenStreetMap'}).addTo(mapPeche);

function renderPeche(){
  const listing = document.getElementById('listing');
  listing.innerHTML = "";
  logements.forEach((l,i)=>{
    L.marker([l.latitude, l.longitude]).addTo(mapPeche)
      .bindPopup(`<strong>${l.nom}</strong><br>${l.commune}`);
    const card = document.createElement('div');
    card.className = 'card-logement';
    card.innerHTML = `
      <img src="${l.photo_url||''}" alt="${l.nom}">
      <div>
        <h3><a href="logement.html?id=${i+1}" target="_blank" style="color:inherit;text-decoration:none">${l.nom}</a></h3>
        <p>${l.commune}</p>
        <div>
          <span class="badge">Design ${l.note_design}/5</span>
          <span class="badge">Localisation ${l.note_localisation}/5</span>
        </div>
        <a class="btn" href="logement.html?id=${i+1}" target="_blank">Découvrir</a>
      </div>
    `;
    listing.appendChild(card);
  });
}

fetch(JSON_URL)
  .then(res=>res.json())
  .then(data=>{
    logements = data;
    renderPeche();
  });
</script>
